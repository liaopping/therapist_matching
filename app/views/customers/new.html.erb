<% provide(:title, 'Sign up') %>
<h1>お客様情報を登録する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @customer do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :sex %>
      <%= f.select :sex, [["男性", 0], ["女性", 1], ["その他", 2]], include_blank: true %>

      <%= f.label :age %>
      <%= f.text_field :age %>

      <%= f.label :pref %>
      <%= f.select :pref, Customer.prefs.keys, include_blank: true %>

      <%= f.label :image %>
      <%= f.file_field :image %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "この内容で登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>