<h1>Therapist Matching</h1>

<% if customer_signed_in? %> <!-- カスタマーがログインしているか調べる -->
  <!-- カスタマーがログインしていた時の処理 -->

  <h4> メールアドレス： <%= current_customer.email %> </h4>
  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %> <!-- ログアウトをする -->
<% else %>
  <!-- カスタマーがログインしていなかった時の処理 -->
  <h2> 現在ログインしていません </h2>
  <%= link_to "ログイン", new_customer_session_path, class: 'post' %> <!-- ログイン画面に移行する -->
  <%= link_to "新規登録", new_customer_registration_path, class: 'post' %> <!-- 新規登録画面に移行する -->
<% end %>

<br>
<% if therapist_signed_in? %> <!-- セラピストがログインしているか調べる -->
  <!-- セラピストがログインしていた時の処理 -->
  <h4> メールアドレス： <%= current_customer.email %> </h4>
  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %> <!-- ログアウトをする -->
<% else %>
  <!-- セラピストがログインしていなかった時の処理 -->
  <%= link_to "セラピストとしてログインする", new_therapist_session_path, class: 'post' %> <!-- セラピストログイン画面に移行する -->
  <%= link_to "セラピストとして新規登録する", new_therapist_registration_path, class: 'post' %> <!-- セラピスト新規登録画面に移行する -->
<% end %>